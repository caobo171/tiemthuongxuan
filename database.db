create table if not exists ExportBills(
	id int primary key auto_increment,
    description text,
	since int,
    items text,
    status varchar(127),
	user_id int,
    cost int,
	index index_status(status)
) engine = INNODB;


create table if not exists ImportBills(
	id int primary key auto_increment,
    description text,
	since int,
    items text,
    status varchar(127),
    provider_id int,
    cost int,
    last_update int,
	index index_status(status)
) engine = INNODB;


create table if not exists Products(
    id int primary key auto_increment,
    name varchar(255),
    description text,
    image text,
    quantiy int, 
    price int,
    history_price text,
    since int,
    last_update int,
    index index_name(name)
) engine = INNODB;

create table if not exists ExportBillItems(
    id int primary key auto_increment,
    product_id int,
    bill_id int,
    status varchar(127),
    name varchar(255),
    cost int,
    since int,
    last_update int,
    index index_status(status)
) engine = INNODB;

create table if not exists ImportBillItems(
    id int primary key auto_increment,
    product_id int,
    bill_id int,
    status varchar(127),
    name varchar(255),
    since int,
    last_update int
)

create table if not exists Users(
    id int primary key auto_increment,
    name varchar(100),
    phone int,
    email varchar(255),
    extra text,
    index index_phone(phone),
    index index_email(phone)
) engine = INNODB;


create table if not exists Provider(
    id int primary key auto_increment,
    name varchar(100),
    phone int,  
    email varchar(255),
    extra text,
    index index_phone(phone),
    index index_email(phone)
) engine = INNODB;


create table if not exists FixedAsset(
    id int primary key auto_increment,
    name varchar(255),
    quantity int,
    since int,
    cost int, 
    provider_id int,
    cycle int,
    status varchar(100)
) engine = INNODB;






